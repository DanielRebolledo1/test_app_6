<% content_for :title, "Articles" %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h1 class="mb-4 text-center">Articles</h1>

  <div class="table-responsive">
    <table class="table table-dark table-hover custom-table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col"><i class="fas fa-file-alt"></i> Title</th>
          <th scope="col">Description</th>
          <th scope="col" class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each_with_index do |article, index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= article.title %></td>
            <td><%= truncate(article.description, length: 100) %></td>
            <td class="text-center">
              <%= link_to article_path(article), class: "btn btn-primary btn-sm me-2", title: "View" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_article_path(article), class: "btn btn-warning btn-sm me-2", title: "Edit" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="text-center mt-4">
    <%= link_to "<i class='fas fa-plus'></i> New Article".html_safe, new_article_path, class: "btn btn-success" %>
  </div>
</div>
